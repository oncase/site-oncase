<%= render 'layouts/admin_navbar' %>

<div class="container">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <% if @jobs.empty? %>
    <div class="alert alert-info">
      Não há vagas.
    </div>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Publicada?</th>
          <th>Nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td>
              <% if job.available %>
                <span class="text-success">
                  <%= fa_icon 'check' %>
                </span>
              <% else %>
                <span class="text-danger">
                  <%= fa_icon 'times' %>
                </span>
              <% end %>
            </td>

            <td><%= job.name %></td>
            <td><%= link_to 'Exibir', job %></td>
            <td><%= link_to 'Editar', edit_job_path(job) %></td>
            <td><%= link_to 'Excluir', job, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= link_to 'Nova vaga', new_job_path, class: 'btn btn-success' %>
</div>
