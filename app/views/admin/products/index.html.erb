<% if notice %>
  <div class="alert alert-success">
    <div class="container">
      Tudo certo! <%= notice %>

      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>

<div class="container pt-4">
  <div class="d-flex">
    <h1>Produtos</h1>
    <div class="ml-auto align-self-center">
      <%= link_to 'Voltar ao site', root_path, class: 'btn btn-outline-info' %>
    </div>
  </div>
  <hr class="divider">

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Posição na exibição</th>
        <th>Nome</th>
        <th>Link</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.position %>º</td>
          <td><%= product.name %></td>
          <td><%= link_to product.href, product.href %></td>
          <td align="right">
            <%= link_to 'editar', edit_admin_product_path(product), class: 'btn btn-outline-info btn-sm' %>
            <span>&nbsp;</span>
            <%= link_to 'excluir', admin_product_path(product), method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-outline-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= link_to 'Novo produto', new_admin_product_path, class: 'btn btn-success' %>
  </div>
</div>