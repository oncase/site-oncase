  </head>
  <body>
    <%= render 'layouts/navbar' %>

    <main>
      <%= yield %>
    </main>

    <%= render 'layouts/footer' %>
    
    <%= cloudinary_js_config %>

    <div class="editable-text-modal">
      <%= render 'layouts/text_content_modal', locals: { text_content: @text_content } %>
    </div>

    <div class="editable-image-modal">
      <%= render 'layouts/image_content_modal', locals: { image_content: @image_content } %>
    </div>

    <div class="editable-link-modal">
      <%= render 'layouts/link_content_modal', locals: { link_content: @link_content } %>
    </div>
  </body>
</html>
