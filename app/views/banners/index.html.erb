<%= render 'layouts/admin_navbar' %>

<div class="container">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>
  
  <% if @banners.empty? %>
    <div class="alert alert-info">
      Não há banners.
    </div>
  <% else %>
    <div class="row pb-4">
      <% @banners.each do |banner| %>
        <div class="col-md-4">
          <div style="border: 1px solid #dcdcdc">
            <%= cl_image_tag banner.image.path, width: '100%' %>
          </div>
          <br>
          <%= link_to "Editar", edit_banner_path(banner), class: 'btn btn-outline-primary' %>
          <%= link_to "Excluir", banner_path(banner), method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-outline-danger' %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= link_to 'Novo banner', new_banner_path, class: 'btn btn-success' %>
</div>
