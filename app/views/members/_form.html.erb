<%= form_for @member do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :member_name, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :function %>
        <%= form.text_field :function, id: :member_function, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :linkedin %>
    <%= form.text_field :linkedin, id: :member_linkedin, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :avatar %>
    <%= form.attachinary_file_field :avatar %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>

  <br>
<% end %>
