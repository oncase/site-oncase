<%= render 'layouts/admin_navbar' %>

<div class="container">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>
  
  <% if @members.empty? %>
    <div class="alert alert-info">
      Não há membros.
    </div>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Foto</th>
          <th>Nome</th>
          <th>Cargo</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td>
              <% if member.avatar.present? %>
                <%= cl_image_tag member.avatar.path, height: "30px" %>
              <% end %>
            </td>
            <td><%= member.name %></td>
            <td><%= member.function %></td>
            <td><%= link_to 'Editar', edit_member_path(member) %></td>
            <td><%= link_to 'Excluir', member, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= link_to 'Novo membro', new_member_path, class: 'btn btn-success' %>
</div>


