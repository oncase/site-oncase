<div class="nested-fields">
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :position %>
        <%= f.number_field :position, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= link_to_remove_association "Remover descrição", f, class: 'btn btn-danger' %>

  <hr class="divider">
</div>
