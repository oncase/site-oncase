<%= render 'layouts/admin_navbar' %>

<div class="container">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>
  
  <% if @case_products.empty? %>
    <div class="alert alert-info">
      Não há cases e aplicações.
    </div>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Categoria</th>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Link</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @case_products.each do |case_product| %>
          <tr>
            <td><%= case_product.category %></td>
            <td><%= case_product.name %></td>
            <td><%= case_product.description.truncate(50) %></td>
            <td><%= link_to "Link", case_product.link %></td>
            <td><%= link_to 'Exibir', case_product %></td>
            <td><%= link_to 'Editar', edit_case_product_path(case_product) %></td>
            <td><%= link_to 'Excluir', case_product, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= link_to 'Novo case/aplicação', new_case_product_path, class: "btn btn-success" %>
</div>