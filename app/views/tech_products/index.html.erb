<p id="notice"><%= notice %></p>

<h1>Tech Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Code available</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tech_products.each do |tech_product| %>
      <tr>
        <td><%= tech_product.name %></td>
        <td><%= tech_product.description %></td>
        <td><%= tech_product.code_available %></td>
        <td><%= tech_product.link %></td>
        <td><%= link_to 'Show', tech_product %></td>
        <td><%= link_to 'Edit', edit_tech_product_path(tech_product) %></td>
        <td><%= link_to 'Destroy', tech_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tech Product', new_tech_product_path %>
